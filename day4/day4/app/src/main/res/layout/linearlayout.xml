<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#D8D5D5"
                android:gravity="right"
                android:text="0"
                android:textSize="50dp"
                android:id="@+id/viewbox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:text="1"
                android:id="@+id/n1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n2"
                android:text="2"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n3"
                android:text="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:text="4"
                android:id="@+id/n4"
                android:gravity="center"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n5"
                android:text="5"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n6"
                android:text="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:text="7"
                android:id="@+id/n7"
                android:gravity="center"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n8"
                android:text="8"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n9"
                android:text="9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:text="+"
                android:id="@+id/nplus"
                android:gravity="center"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/n0"
                android:text="0"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:background="#FF9800"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/nequal"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>